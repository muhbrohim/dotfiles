{
  "$schema": "https://github.com/glzr-io/zebar/raw/v2.7.0/resources/widget-schema.json",
  "htmlPath": "./with-glazewm.html",
  "zOrder": "normal",
  "shownInTaskbar": true,
  "focused": true,
  "resizable": false,
  "transparent": true,
  "caching": {
    "defaultDuration": 604800,
    "rules": []
  },
  "privileges": {
    "shellCommands": []
  },
  "presets": [
    {
      "name": "default",
      "anchor": "bottom_left",
      "offsetX": "0px",
      "offsetY": "0px",
      "width": "100%",
      "height": "40px",
      "monitorSelection": {
        "type": "all"
      },
      "dockToEdge": {
        "enabled": true,
        "edge": "bottom",
        "windowMargin": "0px"
      },
      "floating": true,
      "alwaysOnTop": true
    }
  ]
}
